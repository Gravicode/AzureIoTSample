<Page
    x:Class="CommandCenterApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CommandCenterApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Padding="10" Margin="30" HorizontalAlignment="Center">
            <TextBlock Text="Device Name"></TextBlock>
            <TextBox PlaceholderText="enter device name here.." Name="TxtDevice"></TextBox>
            <TextBlock Text="Command"></TextBlock>
            <TextBox PlaceholderText="enter command name here.." Name="TxtCommand"></TextBox>
            <TextBlock Text="Data"></TextBlock>
            <TextBox PlaceholderText="enter data here.." Name="TxtData"></TextBox>
            <Button Name="BtnSend" Click="BtnSend_Click" Content="SEND TO DEVICE"></Button>
            <RichTextBlock Name="TxtLog" ></RichTextBlock>
        </StackPanel>
    </Grid>
</Page>
